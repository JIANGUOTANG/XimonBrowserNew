<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/edit_box_bg"
    android:orientation="vertical" >

    <com.thecamhi.base.TitleView
        android:id="@+id/title_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal"
        android:padding="15dip" >

        <ImageView
            android:id="@+id/snapshot_alive_setting"
            android:layout_width="85dp"
            android:layout_height="65dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/alive_snapshot_bg"
            android:contentDescription="@null" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/nickname_alive_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/uid_alive_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_normal" />

            <TextView
                android:id="@+id/state_alive_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_normal" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_marginBottom="20dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/modify_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/alive_setting_top_item_bg"
                android:clickable="true"
                android:drawableRight="@drawable/arrow"
                android:paddingBottom="@dimen/px_10"
                android:paddingLeft="30dip"
                android:paddingRight="@dimen/px_10"
                android:paddingTop="@dimen/px_10"
                android:text="@string/modify_password"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/alarm_motion_detection"
                style="@style/alive_setting_textview_style"
                android:text="@string/alarm_motion_detection" />

            <TextView
                android:id="@+id/action_with_alarm"
                style="@style/alive_setting_textview_style"
                android:text="@string/action_with_alarm" />

            <TextView
                android:id="@+id/timing_video"
                style="@style/alive_setting_textview_style"
                android:text="@string/timing_video" />

            <TextView
                android:id="@+id/audio_setup"
                style="@style/alive_setting_textview_style"
                android:text="@string/title_audio_setup" />

            <TextView
                android:id="@+id/video_settings"
                style="@style/alive_setting_textview_style"
                android:text="@string/title_video_settings" />

            <TextView
                android:id="@+id/wifi_settings"
                style="@style/alive_setting_textview_style"
                android:text="@string/wifi_settings" />

            <TextView
                android:id="@+id/sd_card_set"
                style="@style/alive_setting_textview_style"
                android:text="@string/sd_card_set" />

            <TextView
                android:id="@+id/equipment_time_setting"
                style="@style/alive_setting_textview_style"
                android:text="@string/equipment_time_setting" />

            <TextView
                android:id="@+id/mailbox_settings"
                style="@style/alive_setting_textview_style"
                android:text="@string/title_mailbox_settings" />

            <TextView
                android:id="@+id/ftp_settings"
                style="@style/alive_setting_textview_style"
                android:text="@string/title_ftp_settings" />

            <TextView
                android:id="@+id/system_settings"
                style="@style/alive_setting_textview_style"
                android:text="@string/title_system_settings" />

            <TextView
                android:id="@+id/equipment_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/alive_setting_bottom_item_bg"
                android:clickable="true"
                android:drawableRight="@drawable/arrow"
                android:paddingBottom="@dimen/px_10"
                android:paddingLeft="30dip"
                android:paddingRight="@dimen/px_10"
                android:paddingTop="@dimen/px_10"
                android:text="@string/title_equipment_information"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>