<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/live_view_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true" >

    <com.thecamhi.base.MyLiveViewGLMonitor
        android:id="@+id/monitor_live_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/img_shade"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/edit_box_bg"
            android:contentDescription="@null"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/prs_loading"
            style="@style/hi_rogress_horizontal"
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/live_view_layout_sides"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/btn_live_mirror_flip"
                    android:layout_width="@dimen/live_view_layout_width"
                    android:layout_height="@dimen/live_view_layout_height"
                    android:background="@drawable/btn_live_box_bg"
                    android:clickable="true"
                    android:src="@drawable/flip_mirro" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/btn_live_zoom_focus"
                    android:layout_width="@dimen/live_view_layout_width"
                    android:layout_height="@dimen/live_view_layout_height"
                    android:background="@drawable/btn_live_box_bg"
                    android:clickable="true"
                    android:src="@drawable/zoom_focus" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/btn_live_preset"
                    android:layout_width="@dimen/live_view_layout_width"
                    android:layout_height="@dimen/live_view_layout_height"
                    android:background="@drawable/btn_live_box_bg"
                    android:clickable="true"
                    android:src="@drawable/perset" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/btn_live_exit"
                    android:layout_width="@dimen/live_view_layout_width"
                    android:layout_height="@dimen/live_view_layout_height"
                    android:background="@drawable/btn_live_box_bg"
                    android:clickable="true"
                    android:src="@drawable/exitbutton" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_live_tools_bottom"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:background="@color/live_view_layout_sides"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/btn_live_listen"
                    android:layout_width="@dimen/live_view_layout_width"
                    android:layout_height="@dimen/live_view_layout_height"
                    android:background="@drawable/btn_live_box_bg"
                    android:clickable="true"
                    android:src="@drawable/speaker_off" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/btn_live_snapshot"
                    android:layout_width="@dimen/live_view_layout_width"
                    android:layout_height="@dimen/live_view_layout_height"
                    android:background="@drawable/btn_live_box_bg"
                    android:clickable="true"
                    android:src="@drawable/ptz_takepic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/btn_live_record"
                    android:layout_width="@dimen/live_view_layout_width"
                    android:layout_height="@dimen/live_view_layout_height"
                    android:background="@drawable/btn_live_box_bg"
                    android:clickable="true"
                    android:src="@drawable/ptz_takevideo_nor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/resolution_ratio"
                    android:layout_width="@dimen/live_view_layout_width"
                    android:layout_height="@dimen/live_view_layout_height"
                    android:background="@drawable/btn_live_box_bg"
                    android:clickable="true"
                    android:src="@drawable/led_close" />
            </LinearLayout>
        </LinearLayout>

